<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:divider="@drawable/divider_10dp"
    android:orientation="vertical"
    android:showDividers="middle">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/titleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.在XML中使用" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.1 文本样式" />

        <com.view.text.view.TagTextView
            android:id="@+id/url_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tvtType="TEXT"
            app:tvtText="新品"
            app:tvtStartGradientBackgroundColor="#FFF6B7"
            app:tvtEndGradientBackgroundColor="#F6416C"
            app:tvtMarginRight="20dp"
            android:text="荣耀V40轻奢版 5G 超级快充 6400万超清四摄 8GB+128GB钛空银 移动联通电信5G 双卡双待手机" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.2 图片样式" />

        <com.view.text.view.TagTextView
            android:id="@+id/url_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tvtType="IMAGE"
            app:tvtImageResource="@mipmap/icon_2"
            app:tvtImageWidth="20dp"
            app:tvtImageHeight="20dp"
            app:tvtPosition="5"
            android:text="荣耀V40轻奢版 5G 超级快充 6400万超清四摄 8GB+128GB钛空银 移动联通电信5G 双卡双待手机" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.3 图文样式" />

        <com.view.text.view.TagTextView
            android:id="@+id/url_tv3"
            android:layout_width="wrap_content"
            app:tvtType="TEXT_IMAGE"
            app:tvtImageResource="@mipmap/icon_3"
            app:tvtText="支持钱包"
            app:tvtStartGradientBackgroundColor="#A0FE65"
            app:tvtEndGradientBackgroundColor="#FA016D"
            app:tvtLeftPadding="20dp"
            app:tvtRightPadding="20dp"
            app:tvtRadius="99dp"
            app:tvtStrokeWidth="1dp"
            app:tvtStrokeColor="#FA016D"
            app:tvtTextColor="#3CD500"
            android:layout_height="wrap_content"
            android:text="荣耀V40轻奢版 5G 超级快充 6400万超清四摄 8GB+128GB钛空银 移动联通电信5G 双卡双待手机" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.4 自定义View" />

        <com.view.text.view.TagTextView
            android:id="@+id/url_tv4"
            android:layout_width="wrap_content"
            app:tvtLayout="@layout/custom_tag_view"
            app:tvtPosition="11"
            app:tvtMarginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="荣耀V40轻奢版 5G 超级快充 6400万超清四摄 8GB+128GB钛空银 移动联通电信5G 双卡双待手机" />

    </LinearLayout>

</LinearLayout>