<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:divider="@drawable/divider_10dp"
    android:orientation="vertical"
    android:showDividers="middle">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/titleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.在XML中使用" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.1 文本样式" />

        <com.view.text.view.TagTextView
            android:id="@+id/url_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tvt_type="text"
            app:tvt_text="新品"
            app:tvt_start_gradient_background_color="#FFF6B7"
            app:tvt_end_gradient_background_color="#F6416C"
            app:tvt_margin_right="20dp"
            android:text="荣耀V40轻奢版 5G 超级快充 6400万超清四摄 8GB+128GB钛空银 移动联通电信5G 双卡双待手机" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.2 图片样式" />

        <com.view.text.view.TagTextView
            android:id="@+id/url_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tvt_type="image"
            app:tvt_image_resource="@mipmap/icon_2"
            app:tvt_image_width="20dp"
            app:tvt_image_height="20dp"
            app:tvt_position="5"
            android:text="荣耀V40轻奢版 5G 超级快充 6400万超清四摄 8GB+128GB钛空银 移动联通电信5G 双卡双待手机" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.3 图文样式" />

        <com.view.text.view.TagTextView
            android:id="@+id/url_tv3"
            android:layout_width="wrap_content"
            app:tvt_type="textImage"
            app:tvt_image_resource="@mipmap/icon_3"
            app:tvt_text="支持钱包"
            app:tvt_start_gradient_background_color="#A0FE65"
            app:tvt_end_gradient_background_color="#FA016D"
            app:tvt_left_padding="20dp"
            app:tvt_right_padding="20dp"
            app:tvt_radius="99dp"
            app:tvt_stroke_width="1dp"
            app:tvt_stroke_color="#FA016D"
            app:tvt_text_color="#3CD500"
            android:layout_height="wrap_content"
            android:text="荣耀V40轻奢版 5G 超级快充 6400万超清四摄 8GB+128GB钛空银 移动联通电信5G 双卡双待手机" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/subTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.4 自定义View" />

        <com.view.text.view.TagTextView
            android:id="@+id/url_tv4"
            android:layout_width="wrap_content"
            app:tvt_layout="@layout/custom_tag_view"
            app:tvt_position="11"
            app:tvt_margin_left="10dp"
            android:layout_height="wrap_content"
            android:text="荣耀V40轻奢版 5G 超级快充 6400万超清四摄 8GB+128GB钛空银 移动联通电信5G 双卡双待手机" />

    </LinearLayout>

</LinearLayout>